<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Informaci贸n del paciente -->
        <TextView
            android:id="@+id/tvPaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Juan P茅rez"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="juan.perez@email.com"
            app:layout_constraintTop_toBottomOf="@id/tvPaciente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <!-- Informaci贸n del tratamiento -->
        <TextView
            android:id="@+id/tvNombreTratamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Tratamiento de hipertensi贸n"
            app:layout_constraintTop_toBottomOf="@id/tvCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#616161"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            tools:text=" Medicaci贸n"
            app:layout_constraintTop_toBottomOf="@id/tvNombreTratamiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <TextView
            android:id="@+id/tvDetalles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text=" Duraci贸n: 30 d铆as | Precio por d铆a: $15.50"
            app:layout_constraintTop_toBottomOf="@id/tvTipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <!-- Informaci贸n adicional -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text=" 15/01/2026 10:30"
            app:layout_constraintTop_toBottomOf="@id/tvDetalles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            tools:text=" ACTIVO"
            app:layout_constraintTop_toBottomOf="@id/tvFecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <TextView
            android:id="@+id/tvCosto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text=" $465.00"
            app:layout_constraintTop_toBottomOf="@id/tvEstado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llBotones" />

        <!-- Contenedor de botones de acci贸n -->
        <LinearLayout
            android:id="@+id/llBotones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivShowCost"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_calculate"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ver detalles"
                android:tint="#9C27B0"
                android:layout_marginBottom="2dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar tratamiento"
                android:tint="#F44336"
                android:padding="4dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>