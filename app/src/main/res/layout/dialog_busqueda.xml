<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione campo de búsqueda:"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/rgCampoBusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbBuscarNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbBuscarApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido" />

        <RadioButton
            android:id="@+id/rbBuscarCedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cédula" />

        <RadioButton
            android:id="@+id/rbBuscarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo" />

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Término de búsqueda"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTerminoBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
